<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".ManageProductActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/Relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/in_Img1"
            android:background="@drawable/rounded_label"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="250dp"
            android:layout_height="250dp"/>
        <TextView
            android:id="@+id/clickHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="คลิ๊กที่นี่เพื่อเพิ่มรูป"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/Relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Relative"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/Liniear1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/in_type"
                android:hint="Type"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/in_name"
                android:hint="Name"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/in_price"
                android:layout_below="@+id/name"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_label"
                android:hint="Price"/>
            <EditText
                android:id="@+id/in_weight"
                android:hint="Weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_label"
                android:layout_below="@+id/price"
                android:padding="10dp"
                android:layout_margin="5dp"/>
            <EditText
                android:id="@+id/in_detail"
                android:hint="Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_label"
                android:padding="10dp"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:id="@+id/Liniear2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/in_shelf"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_label"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:inputType="number"
                    android:hint="Shelf"/>
                <EditText
                    android:id="@+id/in_row"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_label"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:inputType="number"
                    android:padding="10dp"
                    android:hint="Row"/>
                <EditText
                    android:id="@+id/in_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_label"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:inputType="number"
                    android:padding="10dp"
                    android:hint="Column"/>
            </LinearLayout>
            <Spinner
                android:id="@+id/in_promo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_label"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:entries="@array/Spinner_items" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@id/Liniear2"
        android:layout_below="@id/Relative1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_update"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_below="@+id/Relative1"
            android:text="Update"/>
        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_delete"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:text="Delete"/>
    </LinearLayout>
</RelativeLayout>
</ScrollView>