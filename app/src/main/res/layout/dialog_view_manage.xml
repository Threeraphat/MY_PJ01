<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg1"
    android:padding="10dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/Relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/Img1"
                android:background="@drawable/rounded_label"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <TextView
                android:id="@+id/clickHere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="คลิ๊กที่นี่เพื่อเพิ่มรูป"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/Relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Relative"
            android:layout_margin="10dp"
            android:background="@color/colorTranparent">

            <LinearLayout
                android:id="@+id/Liniear1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/type"
                    android:hint="Type"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/promotionTEXT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_label"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:hint="Promotion description"/>
                <EditText
                    android:id="@+id/name"
                    android:hint="Name"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/price"
                    android:layout_below="@+id/name"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_label"
                    android:hint="Price"/>
                <EditText
                    android:id="@+id/weight"
                    android:hint="Weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_label"
                    android:layout_below="@+id/price"
                    android:padding="10dp"
                    android:layout_margin="5dp"/>
                <EditText
                    android:id="@+id/detail"
                    android:hint="Detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_label"
                    android:padding="10dp"
                    android:layout_margin="5dp"/>
                <LinearLayout
                    android:id="@+id/Liniear3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/ProductX"
                        android:hint="ProductX"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:maxLines="1"
                        android:background="@drawable/rounded_label"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/ProductY"
                        android:hint="ProductY"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_label"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_margin="5dp"/>
                    <Button
                        android:id="@+id/btn_selectposition"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_update"
                        android:text="Select point"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/Liniear2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/shelf"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_label"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:hint="Shelf"/>
                    <EditText
                        android:id="@+id/row"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_label"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:hint="Row"/>
                    <EditText
                        android:id="@+id/column"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_label"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:hint="Column"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@id/Liniear2"
            android:layout_below="@id/Relative1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/update"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_update"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_below="@+id/Relative1"
                android:text="Update"/>
            <Button
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_delete"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:text="Delete"/>
        </LinearLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>