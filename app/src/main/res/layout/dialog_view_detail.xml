<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg1"
    android:padding="10dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/Relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/Img1"
                    android:background="@drawable/rounded_label"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"/>
                <TextView
                    android:id="@+id/clickHere"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="คลิ๊กที่นี่เพื่อเพิ่มรูป"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/Relative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Relative"
                android:layout_margin="10dp"
                android:background="@color/colorTranparent">

                <LinearLayout
                    android:id="@+id/Liniear1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/type"
                        android:hint="Type"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/promotionTEXT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_label"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:hint="Promotion description"/>
                    <TextView
                        android:id="@+id/name"
                        android:hint="Name"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/price"
                        android:layout_below="@+id/name"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_label"
                        android:hint="Price"/>
                    <TextView
                        android:id="@+id/weight"
                        android:hint="Weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_label"
                        android:layout_below="@+id/price"
                        android:padding="10dp"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:id="@+id/detail"
                        android:hint="Detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_label"
                        android:padding="10dp"
                        android:layout_margin="5dp"/>
                    <LinearLayout
                        android:id="@+id/Liniear2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/shelf"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_label"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:hint="Shelf"/>
                        <TextView
                            android:id="@+id/row"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_label"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:hint="Row"/>
                        <TextView
                            android:id="@+id/column"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_label"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:hint="Column"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/find"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_update"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:text="Find product"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>